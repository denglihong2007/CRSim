<Window x:Class="CRSim.ScreenSimulator.Views.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRSim.ScreenSimulator.Views"
        mc:Ignorable="d"
        Title="Error" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="ErrorMessage" Grid.Row="0" TextWrapping="Wrap" Margin="10" />
        <Button Grid.Row="1" Content="Close" Click="CloseButton_Click" HorizontalAlignment="Right" Margin="10" />
    </Grid>
</Window>
